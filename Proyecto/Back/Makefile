# Variables
COMPOSE_FILE=docker-compose.yml

# Target de ayuda por defecto
help:
	@echo "üê≥ Makefile para gesti√≥n de proyectos Docker üê≥"
	@echo ""
	@echo "Ordenes disponibles:"
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-20s\033[0m %s\n", $$1, $$2}'

up: ## Levantando servicios Docker laravel
	@echo 'Levantando de servicios laravel'
	docker-compose up

down: ## Detener y eliminar contenedores laravel
	@echo 'Deteniendo servicios'
	docker-compose down

restart: ## Reiniciar todos los servicios laravel
	@echo 'Reiniciando servicios'
	docker-compose restart

logs: ## Mostrar logs de laravel en tiempo real 
	@echo 'Mostrando logs'
	docker-compose logs -f

clean: ## Eliminar contenedores, im√°genes y vol√∫menes de laravel
	@echo 'Limpiando recursos de Docker laravel'
	docker-compose down -v --rmi all


# Target por defecto
.DEFAULT_GOAL := help